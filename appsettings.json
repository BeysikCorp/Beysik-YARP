{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
  "Routes": [
    {
      "RouteId": "service1",
      "ClusterId": "service1",
      "Match": {
        "Path": "/service1/{**catch-all}"
      },
      "Transforms": [
        { "PathRemovePrefix": "/service1" }
      ]
    },
    {
      "RouteId": "service2",
      "ClusterId": "service2",
      "Match": {
        "Path": "/service2/{**catch-all}"
      },
      "Transforms": [
        { "PathRemovePrefix": "/service2" }
      ]
    },
    {
      "RouteId": "service3",
      "ClusterId": "service3",
      "Match": {
        "Path": "/service3/{**catch-all}" }
      ,
      "Transforms": [
        { "PathRemovePrefix": "/service3" }
      ]
    },
    {
      "RouteId": "service4",
      "ClusterId": "service4",
      "Match": {
        "Path": "/service4/{**catch-all}" }
      ,
      "Transforms": [
        { "PathRemovePrefix": "/service4" }
      ]
    }
  ],
  "Clusters": {
    "service1": {
      "Destinations": {
        "service1": { "Address": "http://service1:5000/" }
      }
    },
    "service2": {
      "Destinations": {
        "service2": { "Address": "http://service2:5001/" }
      }
    },
    "service3": {
      "Destinations": {
        "service3": { "Address": "http://service3:5002/" }
      }
    },
    "service4": {
      "Destinations": {
        "service4": { "Address": "http://service4:5003/" }
      }
    }
  }
  }
}
